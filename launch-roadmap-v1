        {/* Post-Launch Evolution */}
        <div className="mb-12">
          <button
            onClick={() => setPhase2Expanded(!phase2Expanded)}
            className="w-full flex items-center justify-between p-4 bg-blue-900/20 rounded-lg border border-blue-500/30 hover:bg-blue-900/30 transition-colors"
          >
            <div className="text-left">
              <h3 className="text-lg sm:text-xl font-bold text-white">Post-Launch Evolution: Phase 2 (Hamilton → Turing)</h3>
              <p className="text-xs sm:text-sm" style={{ color: '#aaa' }}>7 stages beginning after Neil Armstrong launch</p>
            </div>
            {phase2Expanded ? <ChevronUp size={20} color="#fff" /> : <ChevronDown size={20} color="#fff" />}
          </button>
          
          {phase2Expanded && (
            <div className="mt-4 p-4 sm:p-6 bg-white/5 rounded-lg space-y-3 text-sm">
              <div className="border-l-4 border-blue-500 pl-4">

                      <div className="font-bold text-white">Sequential Post-Consensus Milestones</div>
                      <div className="text-sm" style={{ color: '#aaa' }}>4 milestones must complete in sequence after Paine</div>
                    </div>
                  </div>
                  {sequentialExpanded ? <ChevronUp size={20} color="#fff" /> : <ChevronDown size={20} color="#fff" />}
                </button>
                
                {sequentialExpanded && (
                  <div className="mt-4 ml-4 sm:ml-8 space-y-4">

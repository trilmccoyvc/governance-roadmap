            {technicalInfraExpanded ? <ChevronUp size={20} color="#fff" /> : <ChevronDown size={20} color="#fff" />}
          </button>
          
          {technicalInfraExpanded && (
            <div className="mt-4 p-4 sm:p-6 bg-white/5 rounded-lg space-y-4">
